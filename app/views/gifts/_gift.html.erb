<div id="<%= dom_id gift %>">
  <p>
    <strong>Title:</strong>
    <%= gift.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= gift.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= gift.user_id %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= gift.url %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= gift.price %>
  </p>

  <p>
    <strong>Favorited user:</strong>
    <%= gift.favorited_user_id %>
  </p>

</div>
